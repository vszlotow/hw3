<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">@dimen/textview_height</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="TextViewStyle.Bold">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextViewStyle.Bold.Grey">
        <item name="android:background">@color/colorGrey</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">@dimen/button_height</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="ButtonStyle.Yellow">
        <item name="android:background">@color/colorYellow</item>
    </style>
    <style name="ButtonStyle.Yellow.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">@dimen/edittext_hight</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:ems">10</item>
    </style>

    <style name="EditTextStyle.Brown">
        <item name="android:background">@color/colorBrown</item>
    </style>
    <style name="EditTextStyle.Brown.Cursive">
        <item name="android:fontFamily">cursive</item>
    </style>

</resources>
